.text {
  position: absolute
  bottom: 50px
  background: rgba(255, 255, 255, .8)
  width: 0
  height: 100px
  border-radius: 5px
  display: inline-block
  opacity: 0
  transition: .8s
  padding: 15px
}

.text-title {
  font: 700 1.5em 'Rounded', sans-serif
  color: #000
  text-decoration: none
}

.text-text {
  font: 1em 'Rounded', sans-serif
  color: #000
  text-decoration: none
}

.teacher-item.active {
  width: 450px
  height: 850px
  z-index: 20
}

.teacher-item.disabled {
  opacity: .5
}

.teacher-item.active .text {
  opacity: 1
  width: 250px
}

.phone {
  width: 45vw
  height: 45vw
  display: inline-block
  position: absolute
  bottom: 0
  right: 0
}

.map {
  position: absolute
  display: block
  width: 36%
  height: 64%
  top: 12%
  left: 21%
  z-index: 222
}

.phone-pic {
  background: url(../img/phone.png) no-repeat
  background-size: contain
  position: absolute
  z-index: 111
  top: 0
  bottom: 0
  left: 0
  right: 0
}

.contact {
  &_iphone,
  &_phone {
    display: block
    color: #fff
    font-size: 1.2em
    margin: 5px 0
    text-decoration: none
    transition: 1s
  }

  &_iphone:hover,
  &_phone:hover {
    text-decoration: underline
  }

  &:before {
    content: ''
    display: inline-block
    width: 28px
    height: 28px
    background-size: contain
    vertical-align: middle
    margin-right: 10px
  }

  &_iphone:before {
    background-image: url(../img/icons/iphone.png)
  }

  &_phone:before {
    background-image: url(../img/icons/phone.png)
  }

  &_address:before {
    background-image: url(../img/icons/map.png)
  }
}

video {
  position: absolute
  min-width: 100%
  min-height: 100%
  z-index: -555
}

.menu {
  position: fixed
  z-index: -8888
  top: 0
  bottom: 0
  right: 0
  left: 0
  background: rgba(0, 0, 0, 0)
  transition: .5s

  &__container {
    position: fixed
    top: 0
    bottom: 0
    right: -30%
    left: 100%
    background: rgba(0, 0, 0, .95)
    padding: 13vh 5vw
    z-index: 9999
    transition: all .3s
  }

  &__inactiveField {
    position: fixed
    top: 0
    bottom: 0
    right: 30%
    left: 0
    z-index: 9999
  }

  &__list {
    list-style: none
    border-bottom: 1px solid rgba(255, 255, 255, .3)
    margin-bottom: 2vh
  }

  &__socials {
    display: none
  }

  &__item {
    text-transform: uppercase
    margin-bottom: 2vh
  }

  &__link {
    color: #fff
    font-size: 1.5em
    text-decoration: none
  }

  &__footer {
    color: #fff
    font-size: .9em
    max-width: 257px
    line-height: 1.5em
  }

  &__footer-link {
    color: #fff
    text-decoration none
  }

  &__developer {
    color: #fff
    font-size: 0.7em
    position: absolute
    bottom: 20px
    margin-top: 2vh
  }

  &__developer-text {
    opacity: 0.7
  }

  &.active {
    z-index: 8888
    background: rgba(0, 0, 0, .4)
  }

  &.active .menu__container {
    right: 0
    left: 70%
  }
}

.me {
  color: #fff
  transition: .2s
  text-decoration: none
  border-bottom 1px solid rgba(#fff, .7)
  line-height 3px
  opacity: 0.7

  &:hover {
    opacity: 1
  }
}

.preloader {
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 9999
  background: rgba(255, 255, 255, 1)
}

.preloader-pic {
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  display: block
}

@media (max-width: 850px) {
  video {
    display: none
  }

  .h1 {
    font: 700 7.5vw 'Rounded', sans-serif
    letter-spacing: 0
    text-shadow: none
  }

  .h3 {
    font-size 4.5vw
    letter-spacing 0
  }

  .button {
    margin-top: 10px
    padding: 8px 0
    font-size 1rem
    text-align: center
    width: 100%
  }

  .hamburger {
    right: 19px
    top: 18px
  }

  .header {
    height: 70px
    padding: 0 10px
  }

  .logo {
    width: 94px
    height: 45px
  }

  .phone {
    display: none
  }

  .footer {
    height: 87px
    padding 0 14px
  }

  .sidebar {
    display: none
  }

  .page {
    &__text-block {
      padding-right: 10vw
    }

    &__text {
      font-size 1.1em
    }

    &_main {
      background-image: url(../img/bg1.jpg)
    }
  }

  .service {
    flex-wrap wrap

    &__item {
      width: 50%
      height: 50vh
      min-height auto
    }

    &__wrapper {
      text-align: center
    }

    &__text {
      display: none
    }
  }

  .menu {
    font-size 1.1em

    &__container {
      padding: 13vh 10vw
      text-align: center
    }

    &__item {
      margin-bottom: 2vh
    }

    &__footer {
      text-align: center
      max-width none
      font-size: .75em
      padding-bottom: 8px
      margin-bottom: 12px
    }

    &__developer {
      font-size 0.5em
      bottom: 20px
    }

    &.active .menu__container {
      right: 0
      left: 0
    }
  }
}