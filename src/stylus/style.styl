* {
  margin: 0
  padding: 0
}

a {
  outline: none
}

html, body {
  height: 100%
  width: 100%
}

body {
  position: relative
  overflow: hidden
  font: 16px 'Rounded', sans-serif
}

.wrapper {
  height: 100%
}

.h1 {
  font: 700 4vw 'Rounded', sans-serif
  letter-spacing: 3px
  color: #fff
  text-transform: uppercase
  text-shadow: 6px 6px 18px #000
  margin-bottom: 10px
}

.h3 {
  font: 700 1.5vw 'Rounded', sans-serif
  letter-spacing: 3px
  color: #fff
  text-transform: uppercase
  text-shadow: 6px 6px 18px #000
  margin-bottom: 10px
}

.button {
  padding: 10px 50px
  text-decoration: none
  font: 1rem 'Rounded', sans-serif
  color: #fff
  background: rgba(255, 255, 255, .3)
  margin-top: 20px
  box-sizing: border-box
  display: inline-block
  border: 1px solid #fff
  border-radius: 5px
  transition: 0.5s
  cursor: pointer
  outline: none

  &:hover {
    background: rgba(255, 255, 255, .1)
    box-shadow: 0 0 7px #000
  }
}

.main-content {
  height: 100%
  transform: translate3d(0, 0, 0)
  transition: 1s
}

.content-wrapper {
  padding 0 10vw
  min-height: 100%
}

.page {
  width: 100%
  min-height: 100%
  position: absolute

  &__text-block {
    position: absolute
    top: 50%
    transform: translateY(-50%)
    transition: 1.5s
  }

  &__slide-block {
    margin-top: 50vh
    transform: translateY(-50%)
  }

  &__text {
    color: #fff
    font-size: 1.5em
    text-shadow: 4px 4px 15px #000
  }

  &_main {
    top: 0
    background-size: cover
  }

  &_services {
    top: 100%
    background: url(../img/bg2.jpg) center center no-repeat
    background-size: cover
  }

  &_contacts {
    top: 200%
    background: url(../img/bg1.jpg) center center no-repeat
    background-size: cover
  }

  &_teacher {
    top: 0
    background: url(../img/bg2.jpg) center center no-repeat
    background-size: cover
  }
}

.bg {
  width: 100%
  min-height: 100%
  display: block
  position: absolute
  background-size: cover
  background-position: center center
  background-repeat: no-repeat
  opacity 0
  transition: .6s

  &.gb {
    background-image: url(../img/bg-gb.jpg)
  }

  &.ch {
    background-image: url(../img/bg-china.jpg)
  }

  &.du {
    background-image: url(../img/bg-deuch.jpg)
  }

  &.log {
    background-image: url(../img/bg-log.jpg)
  }

  &.active {
    opacity 1
  }
}

.service {
  position: absolute
  display: flex
  background-size: cover
  background-position: center center
  background-repeat: no-repeat

  &__item {
    position: relative
    min-height 100%
    box-sizing border-box
    width: 25%
    border-right: 1px solid rgba(#fff, .2)
    border-bottom: 1px solid rgba(#fff, .2)
    display: block
    transition: .5s

    &:hover .service__wrapper {
      top: 49.5%
    }

    &_gb .service__background {
      background-image: url(../img/bg-gb.jpg)
    }

    &_ch .service__background {
      background-image: url(../img/bg-china.jpg)
    }

    &_du .service__background {
      background-image: url(../img/bg-deuch.jpg)
    }

    &_log .service__background {
      background-image: url(../img/bg-log.jpg)
    }
  }

  &__background {
    width: 100%
    height: 100%
    display: block
    background-size: cover
    background-position-x center
  }

  &__blackout {
    position: absolute
    top: 0
    bottom: 0
    right: 0
    left: 0
    background: rgba(0, 0, 0, .15)
    z-index: 7777
  }

  &__wrapper {
    position: absolute
    z-index: 9999
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    width: 80%
    transition .4s
  }

  &__text {
    color: #fff
  }
}

.header {
  position: fixed
  z-index: 112
  width: 100%
  height: 150px
  display: flex
  justify-content: flex-start
  align-items: center
  box-sizing: border-box
  padding: 0 40px
  /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#000000+0,000000+100&0.7+0,0.6+24,0.5+48,0+100 */
  background: -moz-linear-gradient(top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.6) 24%, rgba(0, 0, 0, 0.5) 48%, rgba(0, 0, 0, 0) 100%) /* FF3.6-15 */
  background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.6) 24%, rgba(0, 0, 0, 0.5) 48%, rgba(0, 0, 0, 0) 100%) /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.6) 24%, rgba(0, 0, 0, 0.5) 48%, rgba(0, 0, 0, 0) 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
}

.footer {
  position: fixed
  z-index: 111
  bottom: 0
  width: 100px
  height: 80px
  display: flex
  justify-content: flex-start
  align-items: center
  box-sizing: border-box
  padding: 0 40px
}

.sidebar {
  position: fixed
  z-index: 111
  top: 0
  bottom: 0
  right: 0
  display: flex
  justify-content: space-between
  align-items: center
  box-sizing: border-box
  padding: 50px 40px 0
}

.logo {
  width: 165px
  height: 90px
  background: url(../img/logo.png) center center no-repeat
  background-size: contain
  display: inline-block
}

.blackout {
  position: absolute
  top: 0
  bottom: 0
  right: 0
  left: 0
  background: rgba(0, 0, 0, .4)
  z-index: 7777
}

.socials {
  display: flex
}

.social-link {
  display: block
  width: 50px
  height: 50px
  background-size: contain
  opacity: .7
  transition: opacity .3s

  &_vk {
    background-image: url(../img/icons/vk.png)
  }

  &_tg {
    background-image: url(../img/icons/tg.png)
  }

  &_ig {
    background-image: url(../img/icons/ig.png)
  }
}

.social-link:hover {
  opacity: 1
}

.mouse {
  width: 16px
  height: 30px
  border-radius: 14px
  border: 2px solid #fff
  cursor: pointer

  &__roller {
    display: block
    margin: 5px auto
    background: #fff
    opacity: .8
    position: relative
    height: 5px
    width: 2px
    animation: move-roller 1s infinite
  }
}

@keyframes move-roller {
  100% {
    opacity: .2
    height: 4px
    margin: 10px auto
  }
}

.mouse-arrow {
  display: block
  width: 7px
  height: 7px
  border-bottom: 2px solid #fff
  border-right: 2px solid #fff
  opacity: .2
  margin-left: 5px
  transform: rotate(45deg)
  animation-delay: 5s

  &_top {
    animation: twinkle-arrow-top 1s infinite
  }

  &_bottom {
    animation: twinkle-arrow-bottom 1s infinite
  }
}

@keyframes twinkle-arrow-top {
  40% {
    opacity: 1
  }
  100% {
    opacity: .2
  }
}

@keyframes twinkle-arrow-bottom {
  80% {
    opacity: 1
  }
  100% {
    opacity: .2
  }
}

